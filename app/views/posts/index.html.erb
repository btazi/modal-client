<%= render "newmodal" %>
<div class="col-md-4"></div>
<div class="col-md-4">
<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h3>Create a new post it's working !</h3>
<a href="#newpost-modal" role="button" class="btn btn-large btn-primary" data-toggle="modal">New post</a>
</div>

<script type="text/javascript">
  $(document).ready(function(){
$(document).on('shown.bs.modal', '#newpost-modal', function(){
  console.log("test");
  $(document).find("form#new_post").enableClientSideValidations();
})
})
</script>